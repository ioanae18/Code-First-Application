<Window x:Class="AvionInterfata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvionInterfata"
        mc:Ignorable="d"
        Title="Companie Aeriana - TAROM" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <Menu HorizontalAlignment="Left" Height="29" Margin="21,10,0,0" VerticalAlignment="Top" Width="147">
            <MenuItem Header="LISTE" Height="29" FontSize="16" FontWeight="Bold" Width="147" Background="{x:Null}" >
                <MenuItem Header="Pasageri"  FontSize="18" Click="MenuItem_Click_1" Opacity="0.6" Background="{x:Null}" FontStyle="Italic"/>
                <MenuItem Header="Bilete" FontSize="18" Click="MenuItem_Click_2" Opacity="0.6" Background="{x:Null}" FontStyle="Italic" />
                <MenuItem Header="Avion" FontSize="18" Click="MenuItem_Click_3" Opacity="0.6" Background="{x:Null}" FontStyle="Italic"/>
                <MenuItem Header="Rezervare Bilet" FontSize="18" Click="MenuItem_Click_4" Opacity="0.6" Background="{x:Null}" FontStyle="Italic"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
